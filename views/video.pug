html
  head
    title='Movie'
    link(rel='stylesheet', href='/static/css/style.css')
  body
    div(class='video-container')
        video(id='video' controls preload='metadata')
            source(src=mediaRoot + movie.video)
            if movie.subtitle
                track(label='English' kind='subtitles' srclang='en' src=mediaRoot + movie.subtitle)

    div
        a(href='/logout') Logout
